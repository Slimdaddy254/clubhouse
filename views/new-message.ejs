<section class="container">
  <div class="login-box">  <!-- re-use login-box for consistent card styling -->
    <div class="form-section"> <!-- re-use form-section for consistent form styling -->
      <h1>Create a New Message</h1>

      <form action="/messages/new-message" method="POST" class="form">
        <div class="form-group">
          <label for="title">Title:</label>
          <input type="text" id="title" name="title" placeholder="Enter title" required>
        </div>

        <div class="form-group">
          <label for="body">Message:</label>
          <input type="text" id="body" name="body" placeholder="Enter your message" required></input>
        </div>

        <button type="submit" class="btn-primary">Post Message</button>
      </form>
    </div>
  </div>
</section>
