<header class="header">
  <div class="nav-left">
    <a href="/" class="logo">🏠 Clubhouse</a>
  </div>
  <div class="nav-right">
    <% if (user) { %>
      <span class="welcome">Hi, <%= user.first_name %></span>
      <% if (!user.is_member) { %>
        <a href="/join" class="btn">Join Club</a>
      <% } %>
      <a href="/new-message" class="btn">New Message</a>
      <a href="/logout" class="btn btn-danger">Logout</a>
    <% } else { %>
      <a href="/login" class="btn">Login</a>
      <a href="/signup" class="btn btn-primary">Sign Up</a>
    <% } %>
  </div>
</header>
