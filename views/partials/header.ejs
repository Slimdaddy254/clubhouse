<header class="header">
  <div class="nav-left">
    <a href="/" class="logo">🏠 Clubhouse</a>
  </div>
  <div class="nav-right">
    <% if (user) { %>
      <span class="welcome">Hi, <%= user.first_name %></span>
      <% if (!user.is_member) { %>
        <a href="/membership/join" class="header-btn">Join Club</a>
      <% } %>
      <a href="/messages/new-message" class="header-btn">New Message</a>

      <!-- POST form for logout -->
      <form action="/logout" method="POST" class="logout-form" style="display:inline">
        <!-- add CSRF hidden input if you use CSRF protection -->
        <button type="submit" class="header-btn btn-danger">Logout</button>
      </form>
    <% } else { %>
      <a href="/login" class="header-btn">Login</a>
      <a href="/signup" class="header-btn">Sign Up</a>
    <% } %>
  </div>
</header>
