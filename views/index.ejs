<h1 class="page-title">Clubhouse Messages</h1>

<div class="messages">
  <% if (messagesList.length === 0) { %>
    <p class="empty">No messages yet.</p>
  <% } %>

  <% messagesList.forEach(m => { %>
    <article>
      <h3><%= m.title %></h3>
      <p><%= m.body %></p>
      <% if (user && (user.is_member || user.is_admin)) { %>
        <small>By <%= m.first_name %> <%= m.last_name %> â€¢ <%= new Date(m.created_at).toLocaleString() %></small>
      <% } %>
      <% if (user && user.is_admin) { %>
        <form action="/messages/<%= m.id %>/delete" method="POST" style="display:inline">
          <button type="submit" class="btn-danger">Delete</button>
        </form>
      <% } %>
    </article>
  <% }) %>
</div>
